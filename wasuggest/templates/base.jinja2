{% set active_page = active_page|default('unknown_page') -%}

<!doctype html>
<html lang="en" class="h-100">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="{{ site_config['name'] }}: Quick WolframAlpha lookups.">
		<meta name="author" content="CoinSearchr">
		<meta name="robots" content="index, follow" />
		<meta name="keywords" content="Wolfram, WolframAlpha, Wolfram Alpha, Wolfram Alpha Suggest, {{ site_config['name'] }}, Search Engine, Search Tool, Search">
		
		{% block head %} {% endblock %}
		
		<title>{% block title %} {% endblock %} | {{ site_config['name'] }}</title>

		<!-- Bootstrap core CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" integrity="sha512-GQGU0fMMi238uA+a/bdWJfpUGKUkBdgfFdgBm72SUQ6BeyWjoY/ton0tEjH+OSH9iP4Dfh+7HM0I9f5eR0L/4w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css"> -->

		<link rel="search" type="application/opensearchdescription+xml" title="{{ site_config['name'] }}" href="https://{{ site_config['hostname'] }}/static/xml/wasuggest-opensearch.xml">
		
		<!-- Favicons -->
		<link rel="shortcut icon" href="{{ url_for('static', filename='img/favicon.ico') }}">
		<link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', filename='img/apple-touch-icon.png') }}">
		<link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='img/favicon-32x32.png') }}">
		<link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', filename='img/favicon-16x16.png') }}">
		<link rel="manifest" href="{{ url_for('static', filename='other/site.webmanifest') }}">
		
		<!-- Custom styles for this template -->
		<link href="{{ url_for('static', filename='css/main.css') }}" rel="stylesheet">

		<!-- DEBUG:
		active_page: {{ active_page }}
		-->
	</head>
	
	<body>

		<header>
			<nav class="navbar navbar-expand-md navbar-dark bg-dark">
				<div class="container-fluid">
					<a href="/" class="navbar-brand d-flex align-items-center">
						<img src="/static/img/mstile-70x70.png" width="48" height="48" alt="{{ site_config['name'] }} Logo" style="margin-right: 20px;" />
						<strong>{{ site_config['name'] }}</strong>
					</a>

					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
						aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarCollapse">
						<ul class="navbar-nav me-auto mb-2 mb-md-0">
				
							<li class="nav-item">
								<a class="nav-link" href="/">Home</a>
							</li>
							{#
							<li class="nav-item">
								<a class="nav-link" href="/convert">Quick Converter</a>
							</li>
							#}

							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Add to Browser
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li><a class="dropdown-item" href="/guide/firefox">Guide: Add to Firefox</a></li>
									<li><a class="dropdown-item" href="/guide/vivaldi">Guide: Add to Vivaldi Browser</a></li>
									<!--<li><hr class="dropdown-divider"></li>
									<li><a class="dropdown-item" href="#">Add to Firefox</a></li>-->
								</ul>
							</li>

							<li class="nav-item">
								<a class="nav-link" href="/contact">Contact</a>
							</li>
						</ul>

						<!-- 
						<form method="GET" action="/search">
							<div class="input-group me-3">
								<input type="text" name="q" class="form-control" placeholder="Bitcoin, LTC, ..." aria-label="Enter cryptocurrency name to search" {% if active_page != 'index' %}autofocus{% endif %}>
								<div class="input-group-append">
									<button class="btn btn-primary" type="submit">Search</button>
								</div>
							</div>
						</form>
						-->

					</div>
				</div>
			</nav>
		</header>

		<main>
			{% block content %} {% endblock %}
		</main>

		<footer class="text-muted py-5">
			<div class="container">
				
				<p class="float-end mb-1">
					<a href="javascript:scrollToTop()" class="link-dark" id="scrollToTopBtn">Back to Top</a>
				</p>

				<p class="mb-2">&copy; {{ site_config['name'] }} {{ now.year }} | <a href="{{ url_for('privacypolicy') }}" class="link-dark">Privacy Policy</a> | <a href="{{ url_for('contact') }}" class="link-dark">Contact</a> | <a href="{{ site_config['github_link'] }}" target="_blank" class="link-dark">GitHub</a> | <a href="{{ site_config['github_link'] }}/blob/main/LICENSE" target="_blank" class="link-dark">License</a>{# | <a href="http://{{ site_config['tor_hidden_service_hostname'] }}/" class="link-dark">Tor Hidden Service</a> #}</p>
				<p class="mb-2">{{ site_config['name'] }} is an <a href="https://developer.mozilla.org/en-US/docs/Web/OpenSearch" target="_blank" class="link-secondary text-decoration-none">OpenSearch-compatible</a> upgrade to WolframAlpha. Add {{ site_config['name'] }} to your browser, and get WolframAlpha results before loading WolframAlpha!</p>
				<p class="mb-0">{{ site_config['name'] }} data is sourced from <a href="https://wolframalpha.com/" target="_blank" class="link-dark">WolframAlpha</a>. WolframAlpha, CoinSearchr, and {{ site_config['name'] }} assume no liability for use of this website.</p>
			</div>
		</footer>

		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
		
		<script src="{{ url_for('static', filename='js/common.js') }}"></script>
		{% block tail_scripts %} {% endblock %}
	</body>

</html>
